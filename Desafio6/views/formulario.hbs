<body>
  <div class="container mt-3">
    <div class="jumbotron">
      <h1 style="color: rgb(3, 3, 159)">Ingrese nuevo producto:</h1>
      <br />

      <form action="/" method="post">
        <div class="form-group">
          <label for="nombre"><b>Nombre</b></label>
          <input id="nombre" class="form-control" type="text" name="nombre" required="true" placeholder="Instrumento"/>
        </div>

        <div class="form-group">
          <label for="precio"><b>Precio</b></label>
          <input  id="precio" class="form-control" type="number" step="any" name="precio" required="true" placeholder="$100.0"  />
        </div>

        <div class="form-group">
          <label for="url"><b>Foto URL</b></label>
          <input id="url" class="form-control" type="text" name="url" required="true" placeholder="http://ejemplo.com"/>
        </div>

        <button class="btn btn-success mt-3 mb-5">Guardar</button>
        
      </form>

     
    </div>

  </div>

  <div class="container mt-3">
    <div class="jumbotron">
      <h2 style="color: rgb(118, 7, 14)">Productos ingresados</h2>
      <br />

     {{#if productos}} 
        <div class="table-responsive">
            <table class="table table-dark">
              <thead>
                <tr style="color: rgb(245, 131, 70);"> <th>Nombre</th> <th>Precio</th> <th>Foto URL</th> </tr>
              </thead>
              <tbody id="tablaProductos">
                {{#each productos}}
                    <tr id={{this.id}}> <td>{{this.nombre}}</td> <td>${{this.precio}}</td> <td><img width="50" src={{this.url}} alt="not found"></td> </tr>
                {{/each}}
              </tbody>
            </table>
        </div>
    {{else}}  
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
  
</body>

