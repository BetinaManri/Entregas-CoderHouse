<header>
    <%- include('./partials/encabezado.ejs') %>
</header>
<body>
  <div class="container mt-3">
    <div class="jumbotron">
      <h2 style="color: rgb(118, 7, 14)">Productos ingresados</h2>
      <br />

      <form action="/api/productos/lista/ver" method="get">
        <% if(productos.length !== 0) { %>
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: rgb(245, 131, 70);"> <th>Nombre</th> <th>Precio</th> <th>URL</th> </tr>
                   <% for (const producto in productos ) { %>
                    <tr>
                        <td> <%= productos[producto].nombre %> </td>
                        <td> <%= productos[producto].precio %> </td>
                        <td> <img src="<%= productos[producto].url %>" width="80" height="80" /></td>
                    </tr>
                    <% } %>
                </table>
            </div>
        <% } else{ %> 
           <h3 style="color: black">No se encontraron productos</h3>
        <% }%>
      </form>

      <form action="/api/productos" method="get">
        <button>Ingresar nuevo producto</button>
      </form>

    </div>
  </div>
</body>
<%- include('./partials/pie.ejs') %>