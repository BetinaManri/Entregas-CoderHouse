<header>
     include partials/encabezado.pug  
</header>
<body>
  <div class="container mt-3">
    <div class="jumbotron">
      <h2 style="color: rgb(118, 7, 14)">Productos ingresados</h2>
      <br />

      <form action="/api/productos" method="get">
        if(productos.length !== 0)  
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: rgb(245, 131, 70);"> <th>Nombre</th> <th>Precio</th> <th>URL</th> </tr>
                
                each producto in productos
                    tr 
                        td=producto.nombre
                        td=producto.precio
                        td 
                            img(width="50" src=producto.url alt="not found")
                      
                </table>
            </div>
        else  
           <h3 style="color: black">No se encontraron productos</h3>
         
      </form>

      <form action="/api/productos" method="get">
        <button>Ingresar nuevo producto</button>
      </form>

    </div>
  </div>
</body>
