<header>
     
<body>
  <div class="container mt-3">
    <div class="jumbotron">
      <h2 style="color: rgb(118, 7, 14)">Productos ingresados</h2>
      <br />

     {{#if productos}} 
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: rgb(245, 131, 70);"> <th>Nombre</th> <th>Precio</th> <th>Foto URL</th> </tr>
                {{#each productos}}
                    <tr> <td>{{this.nombre}}</td> <td>${{this.precio}}</td> <td><img width="50" src={{this.url}} alt="not found"></td> </tr>
                {{/each}}
            </table>
        </div>
    {{else}}  
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}


      <form action="/api/productos" method="get">
        <button>Ingresar nuevo producto</button>
      </form>

    </div>
  </div>
</body>
